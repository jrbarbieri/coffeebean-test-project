<h1 class="text-center mt-5 mb-4">User Registration</h1>

<%= form_with(model: @user, url: registers_path, local: true, html: { class: 'mx-auto mt-4', style: 'max-width: 400px;' }) do |form| %>
  <%= render partial: 'errors' %>
  
  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-center gap-3">
    <div class="form-actions text-center">
      <%= form.submit 'Create', class: 'btn btn-primary' %>
    </div>
    <div class="form-actions text-center">
      <%= link_to 'Back', { controller: 'signin', action: 'index' }, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>