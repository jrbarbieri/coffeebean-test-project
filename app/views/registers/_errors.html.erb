<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger mb-4">
    <h4><%= pluralize(@user.errors.count, "error") %> founded:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>